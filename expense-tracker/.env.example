# Database Configuration
# Used by config/database.yml
DATABASE_HOST=db
DATABASE_USERNAME=expense_user
DATABASE_PASSWORD=expense_password
DATABASE_NAME=expense_tracker_development

# Rails Environment
RAILS_ENV=development

# Rails Secret Key Base (generate with: rails secret)
# Required for production deployments
# SECRET_KEY_BASE=your_secret_key_here

# Rails Log Level
# Options: debug, info, warn, error, fatal
RAILS_LOG_LEVEL=debug

# Rails Max Threads
# Used for database connection pool size
RAILS_MAX_THREADS=5

# Server Configuration
PORT=3000
BINDING=0.0.0.0

# MySQL Configuration (for docker-compose)
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=expense_tracker_development
MYSQL_USER=expense_user
MYSQL_PASSWORD=expense_password

# Optional: Email Configuration (for Devise)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=example.com
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_app_password
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

# Optional: Action Mailer Configuration
# ACTION_MAILER_DEFAULT_URL_HOST=localhost:3000
# ACTION_MAILER_DEFAULT_URL_PROTOCOL=http

# Optional: Redis (if using for caching or Action Cable)
# REDIS_URL=redis://localhost:6379/0

# Optional: Bullet Gem (N+1 query detection)
# BULLET_ENABLED=true

# Optional: Test Coverage
# COVERAGE=true
