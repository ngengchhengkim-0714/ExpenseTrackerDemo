<%= form_with(model: category, local: true, class: "space-y-4") do |f| %>
  <% if category.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name,
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "e.g., Groceries, Rent, Salary" %>
  </div>

  <div>
    <%= f.label :category_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :category_type,
        options_for_select([['Income', 'income'], ['Expense', 'expense']], category.category_type),
        {},
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :color, "Color (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="flex items-center space-x-2">
      <%= f.color_field :color,
          value: category.color || '#6B7280',
          class: "h-10 w-20 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <span class="text-xs text-gray-500">Pick a color for this category</span>
    </div>
  </div>

  <div class="flex items-center justify-end space-x-3 pt-4">
    <% if category.persisted? %>
      <%= link_to "Cancel", categories_path, class: "inline-flex justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
    <%= f.submit category.persisted? ? 'Update Category' : 'Create Category',
        class: "inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
