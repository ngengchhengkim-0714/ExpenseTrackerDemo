<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Monthly Report</h1>
        <p class="mt-2 text-sm text-gray-600">
          <%= @start_date.strftime('%B %d, %Y') %> - <%= @end_date.strftime('%B %d, %Y') %>
        </p>
      </div>

      <%= link_to "â† Back to Dashboard", reports_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>

    <!-- Date Range Selector -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <%= form_with url: monthly_reports_path, method: :get, class: "flex items-end space-x-4" do |f| %>
        <div class="flex-1">
          <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :start_date, value: @start_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="flex-1">
          <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :end_date, value: @end_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <%= f.submit "Generate Report", class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      <% end %>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Income -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Income</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= number_to_currency(@summary[:total_income]) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Expenses -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Expenses</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= number_to_currency(@summary[:total_expenses]) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Net Savings -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Net Savings</dt>
                <dd class="text-lg font-semibold <%= @summary[:net_savings] >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= number_to_currency(@summary[:net_savings]) %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Savings Rate -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Savings Rate</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @summary[:savings_rate] %>%</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Income vs Expenses Chart -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Income vs Expenses</h3>
      <%= column_chart [
        { name: "Income", data: { "Income" => @summary[:total_income] } },
        { name: "Expenses", data: { "Expenses" => @summary[:total_expenses] } }
      ], colors: ["#10B981", "#EF4444"], thousands: ",", prefix: "$" %>
    </div>

    <!-- Category Breakdown Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <!-- Income by Category -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Income by Category</h3>
        <% if @summary[:income_by_category].any? %>
          <%= pie_chart @summary[:income_by_category].to_h,
              colors: ["#10B981", "#34D399", "#6EE7B7", "#A7F3D0", "#D1FAE5"],
              thousands: ",",
              prefix: "$" %>

          <div class="mt-4 space-y-2">
            <% @summary[:income_by_category].each do |category_name, amount| %>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600"><%= category_name %></span>
                <span class="font-medium text-gray-900"><%= number_to_currency(amount) %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-8">No income data for this period</p>
        <% end %>
      </div>

      <!-- Expenses by Category -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Expenses by Category</h3>
        <% if @summary[:expenses_by_category].any? %>
          <%= pie_chart @summary[:expenses_by_category].to_h,
              colors: ["#EF4444", "#F87171", "#FCA5A5", "#FECACA", "#FEE2E2"],
              thousands: ",",
              prefix: "$" %>

          <div class="mt-4 space-y-2">
            <% @summary[:expenses_by_category].each do |category_name, amount| %>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600"><%= category_name %></span>
                <span class="font-medium text-gray-900"><%= number_to_currency(amount) %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 text-center py-8">No expense data for this period</p>
        <% end %>
      </div>
    </div>

    <!-- Top Expense Categories -->
    <% if @summary[:top_expense_categories].any? %>
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Top 5 Expense Categories</h3>
        <%= bar_chart @summary[:top_expense_categories].to_h,
            colors: ["#EF4444"],
            thousands: ",",
            prefix: "$",
            xtitle: "Category",
            ytitle: "Amount" %>
      </div>
    <% end %>

    <!-- Transaction Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white shadow rounded-lg p-6">
        <h4 class="text-sm font-medium text-gray-500 mb-2">Transaction Count</h4>
        <div class="flex items-baseline space-x-3">
          <span class="text-2xl font-bold text-gray-900"><%= @summary[:transaction_count][:total] %></span>
          <span class="text-sm text-gray-500">
            (<%= @summary[:transaction_count][:income] %> income, <%= @summary[:transaction_count][:expense] %> expense)
          </span>
        </div>
      </div>

      <div class="bg-white shadow rounded-lg p-6">
        <h4 class="text-sm font-medium text-gray-500 mb-2">Average Income</h4>
        <p class="text-2xl font-bold text-green-600"><%= number_to_currency(@summary[:average_transaction][:income]) %></p>
      </div>

      <div class="bg-white shadow rounded-lg p-6">
        <h4 class="text-sm font-medium text-gray-500 mb-2">Average Expense</h4>
        <p class="text-2xl font-bold text-red-600"><%= number_to_currency(@summary[:average_transaction][:expense]) %></p>
      </div>
    </div>
  </div>
</div>
